@model U4Actividad2Roberto.Models.Docente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }
<main>
    <section id="datos">
        <h1>Inicio de sesión</h1>
        <form method="post" action="~/Home/ISDocente">
            <label>Clave:</label><br />
            <input type="number" asp-for="Clave" required /><br />
            <label>Contraseña:</label><br />
            <input type="password" asp-for="Contrasena" required /><br />
            <input class="btn" type="submit" value="Aceptar" />
            <br />
            <a href="~/Home/ISDirector">Iniciar como Director </a>
            @Html.ValidationSummary()
        </form>
    </section>
</main>